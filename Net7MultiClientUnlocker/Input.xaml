<Window x:Class="Net7MultiClientUnlocker.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300">
        <StackPanel Margin="5,5,5,5">
            <TextBlock Name="TitleTextBox" Margin="0,0,0,10" />
            <TextBox Name="InputTextBox" Padding="3,3,3,3" />
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Button Name="BtnOk" Content="OK" Grid.Column="0" Margin="0,0,5,0" Padding="8" Click="ConfirmClick" />
                <Button Name="BtnCancel" Content="Cancel" Grid.Column="1" Margin="5,0,0,0" Padding="8" Click="CancelClick" />
            </Grid>
        </StackPanel>
</Window>
